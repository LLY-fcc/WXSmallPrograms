/* pages/component/stepper/stepper.wxss */
.stepper {
  width: 80px;
  height: 26px;
  /*设置一个边框*/
  border: 1px solid #ccc;
  border-radius: 3px;
  margin: 0 auto
}
/*加号和减号样式*/
.stepper text {
  width: 19px;
  line-height: 26px;
  text-align: center;
  float: left
}
/*数值框*/
.stepper input {
  width: 40px;
  height: 26px;
  text-align: center;
  line-height: 26px;
  font-size: 12px;
  float: left;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc
}
/*普通样式*/
.stepper .normal {
  color: black
}
/*禁用样式*/
.stepper .disabled {
  color: #ccc;
}